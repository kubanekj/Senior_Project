<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fitnessLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <ScrollView 
        android:id="@+id/scroll"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/laidout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

    <Spinner
        android:id="@+id/exerciseCategories"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:entries="@array/exerCategories" />

    <Spinner
        android:id="@+id/exerciseOptions"
        android:layout_width="200dp"
        android:layout_height="80dp"
         android:entries="@array/light"
       />

    <TextView
        android:id="@+id/textView1"
        android:textColor="#0000ff"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Number Of Reps" />

    <EditText
        android:id="@+id/numReps"
         android:layout_width="200dp"
        android:layout_height="80dp"
        android:inputType="number">
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:textColor="#0000ff"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or Enter Duration Of Workout (Minutes)" />

    <EditText
        android:id="@+id/length"
         android:layout_width="200dp"
        android:layout_height="80dp"
        android:inputType="number" />

    <Button
        android:id="@+id/closefit"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Close" />
    </LinearLayout>
    </ScrollView>

</LinearLayout>