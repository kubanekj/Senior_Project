<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fitnessTrackLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <ScrollView 
        android:id="@+id/scroll"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/laidout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
    
      <TextView
        android:id="@+id/StartDate"
        android:textColor="#0000ff"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Start Date" />

     <TextView
        android:id="@+id/exerStartDate"
        android:textColor="#0000ff"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/pickExerStartDate"
         android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Choose Start Date" />

    <TextView
        android:id="@+id/endDate"
        android:textColor="#0000ff"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an End Date" />
    
    <TextView
        android:id="@+id/exerEndDate"
        android:textColor="#0000ff"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/pickExerEndDate"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Choose End Date" />

    <Button
        android:id="@+id/getExer"
       android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Get Info" />

    <Button
        android:id="@+id/exit"
       android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Close" />
    </LinearLayout>
    </ScrollView>

</LinearLayout>