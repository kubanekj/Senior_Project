<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/laidout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
	<TextView android:id="@+id/username"
        android:layout_width="137dp"
        android:layout_height="20dp"
        android:text="Choose A Username"/>
    <EditText
        android:id="@+id/EditTextName"
        android:layout_width="400px"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:hint="@string/feedbackname"
        android:inputType="textPersonName" >
    </EditText>
	
        <TextView android:id="@+id/username"
        android:layout_width="137dp"
        android:layout_height="20dp"
        android:text="Choose A Password"/>
    <EditText
        android:id="@+id/pass"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:hint="@string/password"
        android:inputType="textPassword" >
    </EditText>

        <TextView android:id="@+id/username"
        android:layout_width="137dp"
        android:layout_height="20dp"
        android:text="Verify Password"/>
    <EditText
        android:id="@+id/verifyPass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:hint="@string/verifyPassword"
        android:inputType="textPassword" >
    </EditText>

        <TextView android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="Enter Your Current Weight"/>
    <EditText
        android:id="@+id/EditTextWeight"
        android:layout_width="500px"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:hint="@string/feedbackweight"
        android:inputType="number" >
    </EditText>

    <TextView
        android:id="@+id/dateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="" />

    <Button
        android:id="@+id/pickDate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:text="Enter Birthdate" />

    <CheckBox
        android:id="@+id/user_pass"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="Save Username and Password?" >
    </CheckBox>

        <Button
        android:id="@+id/gender"
        android:layout_width="200px"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:onClick="chooseGender"
        android:text="@string/gender" ></Button>
   

    <Button
        android:id="@+id/submit"
        android:layout_width="200px"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:onClick="sendFeedback"
        android:text="@string/feedbackbutton" >
    </Button>

</LinearLayout>
