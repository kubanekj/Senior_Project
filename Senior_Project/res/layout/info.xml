<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/laidout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <ScrollView 
        android:id="@+id/scroll"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/laidout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/username"
                android:textColor="#0000ff"
                android:background="#ffffff"
                android:textStyle="bold"
                android:layout_width="137dp"
                android:layout_height="20dp"
                android:text="Choose A Username"/>

            <EditText
                android:id="@+id/EditTextName"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:hint="@string/usernameInput"
                android:inputType="textPersonName" >
            </EditText>

            <TextView
                android:id="@+id/username"
                android:textColor="#0000ff"
                android:background="#ffffff"
                android:textStyle="bold"
                android:layout_width="137dp"
                android:layout_height="20dp"
                android:text="Choose A Password" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:hint="@string/password"
                android:inputType="textPassword" >
            </EditText>

            <TextView
                android:id="@+id/username"
                android:textColor="#0000ff"
                android:background="#ffffff"
                android:textStyle="bold"
                android:layout_width="137dp"
                android:layout_height="20dp"
                android:text="Verify Password" />

            <EditText
                android:id="@+id/verifyPass"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:hint="@string/verifyPassword"
                android:inputType="textPassword" >
            </EditText>

            <TextView
                android:id="@+id/username"
                android:textColor="#0000ff"
                android:textStyle="bold"
                android:background="#ffffff"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="Enter Your Current Weight" />

            <EditText
                android:id="@+id/StartWeight"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:hint="@string/weightInput"
                android:inputType="number" >
            </EditText>

            

            <TextView
                android:id="@+id/dateDisplay"
                android:textColor="#0000ff"
                android:background="#ffffff"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/pickDate"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:text="Enter Birthdate" />

            <Button
                android:id="@+id/gender"
                android:layout_width="200px"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:onClick="chooseGender"
                android:text="@string/gender" >
            </Button>

            <Button
                android:id="@+id/submitRegisterPage"
                android:layout_width="200px"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:onClick="sendFeedback"
                android:text="@string/submitRegister" >
            </Button>
        </LinearLayout>

</ScrollView>
</LinearLayout>
